<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>assembly-jcr2vfs-distribution</id>
  <formats>
    <format>zip</format>
    <format>dir</format>
  </formats>

  <includeBaseDirectory>true</includeBaseDirectory>

  <fileSets>
    <fileSet>
      <directory>src/main/assembly/scripts</directory>
      <lineEnding>unix</lineEnding>
      <filtered>true</filtered>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>**/*.sh</include>
      </includes>
      <fileMode>755</fileMode>
    </fileSet>
    <fileSet>
      <directory>src/main/assembly/scripts</directory>
      <lineEnding>dos</lineEnding>
      <filtered>true</filtered>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>**/*.bat</include>
      </includes>
    </fileSet>
  </fileSets>

  <dependencySets>
    <!-- JCR Exporter Dependencies-->
    <dependencySet>
      <includes>
        <include>org.drools:drools-wb-jcr2vfs-export:zip:with-deps</include>
      </includes>
      <unpack>true</unpack>
      <outputDirectory>jcr-exporter-libs</outputDirectory>
    </dependencySet>

    <!--VFS Importer Dependencies-->
    <dependencySet>
      <includes>
        <include>org.drools:drools-wb-jcr2vfs-import:zip:with-deps</include>
      </includes>
      <unpack>true</unpack>
      <outputDirectory>vfs-importer-libs</outputDirectory>
    </dependencySet>
  </dependencySets>

</assembly>
